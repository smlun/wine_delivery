.row
  = link_to "", wines_path, class: 'glyphicon glyphicon-chevron-left'

.row
  .col-xs-5
    - if @wine.wine_image_url == nil
        img src="http://placehold.it/400x550"
    - else
      = image_tag @wine.wine_image_url
  .col-xs-7
    h1 = @wine.name
    p = @wine.year
    p = @wine.description
    p.pull-right = @wine.price
  
  .col-xs-1.pull-right#order-form
    - if user_signed_in?
      =render 'orders/form'

.row
  = link_to "DELETE", wine_path(@wine), method: :delete, data: { confirm: 'ARE YOU SURE?' }
  
